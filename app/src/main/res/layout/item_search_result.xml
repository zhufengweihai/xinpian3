<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:padding="10dp">

    <FrameLayout
        android:id="@+id/fl_image"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:background="@drawable/shape_rounded_corners"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:background="@color/red"
            android:paddingHorizontal="5dp"
            android:paddingVertical="3dp"
            android:textColor="@color/white"
            android:textSize="11sp" />
    </FrameLayout>


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:text="退后一步，爱上你"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/tv_actors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fl_image"
        app:layout_constraintTop_toTopOf="@id/fl_image" />

    <TextView
        android:id="@+id/tv_actors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="start|center_vertical"
        android:maxLines="1"
        android:paddingTop="2dp"
        android:text="国产"
        android:textColor="@color/gray"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/tv_info"
        app:layout_constraintStart_toEndOf="@id/fl_image"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="start|center_vertical"
        android:paddingTop="2dp"
        android:text="6.0"
        android:textColor="@color/gray"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/tv_desc"
        app:layout_constraintStart_toEndOf="@id/fl_image"
        app:layout_constraintTop_toBottomOf="@id/tv_actors" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="start|center_vertical"
        android:maxLines="3"
        android:paddingTop="2dp"
        android:text="6.0"
        android:textColor="@color/gray"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/fl_image"
        app:layout_constraintStart_toEndOf="@id/fl_image"
        app:layout_constraintTop_toBottomOf="@id/tv_info" />

</androidx.constraintlayout.widget.ConstraintLayout>