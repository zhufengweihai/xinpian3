<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.Design.BottomNavigationView">
        <item name="itemIconSize">0dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationViewActiveText</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationViewInactiveText</item>
        <item name="itemPaddingBottom">15dp</item>
        <item name="itemTextColor">@color/nav_item_color</item>
    </style>

    <style name="BottomNavigationViewActiveText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/main</item>
    </style>

    <style name="BottomNavigationViewInactiveText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/main</item>
    </style>

    <style name="RoundBorder" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerRadius">8dp</item>
    </style>
</resources>
